<swiper indicator-dots="{{ true }}" 
indicator-active-color="#3A4861" autoplay="{{ true }}" >
  <block wx:for="{{ swiperList }}" wx:key="id">
    <swiper-item>
      <image src="{{ item.image }}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>
